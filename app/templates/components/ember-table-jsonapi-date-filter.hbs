<div class="table-filter">
    {{#if label}}
        <label for="filter-{{elementId}}" class="control-label {{labelClass}}">
            {{label}}
        </label>
    {{/if}}
    <div class="{{inputClass}} date-filter">
        {{input value=dateFilter type="date" id=(concat "filter-" elementId) class="form-control" placeholder=filterPlaceholder}}
        {{#if isClearable}}
            <span {{action 'clearFilter'}} class="glyphicon glyphicon-remove clearFilter"></span>
        {{/if}}
    </div>
</div>
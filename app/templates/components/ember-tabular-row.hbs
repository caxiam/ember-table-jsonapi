<tr>
  {{#each columns as |column|}}
    {{#if column.isActive}}
      {{!-- TODO: must be a way to use yield or inline form based on a property --}}
      {{#if (find-by columnsConfig "property" column.property)}}
        {{yield (hash
          cell=(component "ember-tabular-cell" column=column record=row colProperty=colProperty)
        )}}
      {{else}}
        {{ember-tabular-cell column=column record=row colProperty=column.property}}
      {{/if}}
    {{/if}}
  {{/each}}
</tr>
